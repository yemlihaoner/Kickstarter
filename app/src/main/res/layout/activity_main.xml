<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:fitsSystemWindows="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity" xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
            android:id="@+id/animation_layout"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:background="#00d2bc"
            android:layout_height="match_parent">
        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/load_animation"
                android:layout_gravity="center"
                app:lottie_rawRes="@raw/load_animation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:padding="6dp"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"/>

        <ImageView
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:src="@drawable/kickstarter2"
                android:id="@+id/kickstarter_word"
                android:layout_height="132dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:visibility="visible"/>
    </RelativeLayout>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="6dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            android:layout_height="wrap_content">
        <LinearLayout
                android:padding="8dp"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent">
            <SearchView
                    android:id="@+id/searchBar"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="40dp"
                    android:visibility="visible"/>
            <ImageButton
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:layout_width="40dp"
                    android:src="@drawable/success"
                    android:id="@+id/filter_button_OK"
                    android:layout_height="40dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone"/>

            <ImageButton
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:layout_width="40dp"
                    android:src="@drawable/filter"
                    android:id="@+id/filter_button"
                    android:layout_height="40dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp"
                    android:visibility="visible"/>
            <ImageButton
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="3dp"
                    app:srcCompat="@drawable/order"
                    android:id="@+id/sort_button"
                    android:visibility="visible"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <LinearLayout
            android:id="@+id/linear_operations"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <android.support.v7.widget.CardView
                android:layout_margin="4dp"
                android:id="@+id/searcher_layout"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:background="@color/colorPrimary"
                    android:paddingStart="6dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                <TextView
                        tools:text="patata"
                        android:textColor="#A9A9A9"
                        android:id="@+id/searcher_text"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:textStyle="italic"/>
                <ImageButton
                        android:id="@+id/close_searcher"
                        android:padding="2dp"
                        android:src="@drawable/ic_youtube_searched_for_black_24dp"
                        android:scaleType="fitXY"
                        android:background="@android:color/transparent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="25dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_margin="4dp"
                android:id="@+id/filter_layout"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingStart="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                <TextView
                        tools:text="patata"
                        android:textColor="#A9A9A9"
                        android:id="@+id/filter_text"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:textStyle="italic"/>
                <ImageButton
                        android:id="@+id/close_filter"
                        android:padding="2dp"
                        android:src="@drawable/ic_youtube_searched_for_black_24dp"
                        android:scaleType="fitXY"
                        android:background="@android:color/transparent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="25dp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_margin="4dp"
                android:id="@+id/order_layout"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:paddingStart="6dp"
                    android:gravity="center"
                    android:layout_height="25dp">
                <TextView
                        tools:text="patata"
                        android:textColor="#A9A9A9"
                        android:id="@+id/order_text"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_marginEnd="6dp"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"/>
                <ImageButton
                        android:id="@+id/close_order"
                        android:src="@drawable/ic_youtube_searched_for_black_24dp"
                        android:scaleType="fitXY"
                        android:padding="2dp"
                        android:background="@android:color/transparent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="25dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


    <LinearLayout
            android:id="@+id/filter_operations"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <android.support.v7.widget.CardView
                android:layout_margin="7dp"
                android:id="@+id/first_filter"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="17dp"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:tag="Grey"
                    android:id="@+id/first_filter_L"
                    android:background="#888888"
                    android:padding="4dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        tools:text="patata"
                        android:textColor="#A9A9A9"
                        android:id="@+id/F_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:textStyle="italic"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_margin="7dp"
                android:id="@+id/second_filter"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="17dp"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:tag="Grey"
                    android:id="@+id/second_filter_L"
                    android:padding="4dp"
                    android:background="#888888"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        tools:text="patata"
                        android:textColor="#A9A9A9"
                        android:id="@+id/S_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:textStyle="italic"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_margin="7dp"
                android:id="@+id/third_filter"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="17dp"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:tag="Grey"
                    android:id="@+id/third_filter_L"
                    android:padding="4dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="#888888"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        tools:text="patata"
                        android:textColor="#A9A9A9"
                        android:id="@+id/L_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:textStyle="italic"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>